{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height" : 400,
    "title": "Happiness Score by Country (2016)",
    "data": {
        "url": "https://raw.githubusercontent.com/hongyee06/FIT3179/main/week10_homework/2016.csv"
        },
    "params":[
        {
            "name": "Region_selection",
            "bind": {
            "input": "select",
            "options": [
            null,
            "Australia and New Zealand",
            "Central and Eastern Europe",
            "Eastern Asia",
            "Latin America and Caribbean",
            "Middle East and Northern Africa",
            "North America",
            "Southeastern Asia",
            "Southern Asia",
            "Sub-Saharan Africa",
            "Western Europe"
            ],
            "labels":[
            "Show All",
            "Australia and New Zealand",
            "Central and Eastern Europe",
            "Eastern Asia",
            "Latin America and Caribbean",
            "Middle East and Northern Africa",
            "North America",
            "Southeastern Asia",
            "Southern Asia",
            "Sub-Saharan Africa",
            "Western Europe"
            ],
            "name": "Region Selection: "
            }
            }
            
            ],
    "transform": [{
        "filter": "Region_selection == null || datum.Region == Region_selection"
        }

    ],
    "encoding": {
        "x": {
            "field": "Score",
            "type": "quantitative",
            "title": "Happiness Score"
        },
        "y": {
            "field": "GDP per capita",
            "type": "quantitative"
        }
    },
    "layer":[
        {           
    "mark": "circle",
    "encoding":{
        "color": {
            "field": "Region",
            "type": "nominal",
            "scale": {
                "domain": [
                  "Australia and New Zealand",
                  "Central and Eastern Europe",
                  "Eastern Asia",
                  "Latin America and Caribbean",
                  "Middle East and Northern Africa",
                  "North America",
                  "Southeastern Asia",
                  "Southern Asia",
                  "Sub-Saharan Africa",
                  "Western Europe"
                ],
                "range": [
                  "#1f77b4",
                  "#ff7f0e",
                  "#2ca02c",
                  "#ff5733",
                  "#9467bd",
                  "#8c564b",
                  "#e377c2",
                  "#7f7f7f",
                  "#bcbd22",
                  "#17becf"
                ]
              }
        },
        
        "size": {
            "field": "Happiness Rank",
            "type": "quantitative",
            "sort": "descending",
            "scale": {
                "type": "threshold",
                "domain": [30, 50, 70, 90, 150],
                "range": [50, 150, 200, 300, 400]
                }
            
        },
        "tooltip": [
            {"field": "Country", "type": "nominal"},
            {"field": "Happiness Rank", "type": "quantitative", "format": ","},
            {"field": "Score", "type": "quantitative", "format": ",","title":"Happiness Score"},
            {"field": "GDP per capita", "type": "quantitative", "format": ","}      
          ]
    }
    },
    {
        "mark": {
            "type": "text",
            "align": "right",
            "baseline": "middle",
            "dx": -12,
            "fontSize": 11.5,
            "fontStyle": "italic"
            },
            "encoding": {
                "text": {"field": "Country", "type": "nominal"},
                "color": {"value": "black"},
                "opacity": {
                "condition": {
                    "test": "datum['Country'] == 'China' || datum['Country'] == 'Singapore' || datum['Country'] == 'Australia' || datum['Country'] == 'New Zealand' || datum['Country'] == 'Qatar' || datum['Country'] == 'Yemen' || datum['Country'] == 'United States'",
                    "value": 1
                },
                "value": 0
                },
                "tooltip": [
                    {"field": "Country", "type": "nominal"},
                    {"field": "Happiness Rank", "type": "quantitative", "format": ","},
                    {"field": "Score", "type": "quantitative", "format": ",","title":"Happiness Score"},
                    {"field": "GDP per capita", "type": "quantitative", "format": ","}  
                ]
                    
    }
}
]

   
}