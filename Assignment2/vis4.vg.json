{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
    "url": "https://raw.githubusercontent.com/hongyee06/FIT3179/main/week10_homework/2016.csv"
  },
  "width": "container",
  "height": 400,
  "params": [
    {
      "name": "search_input",
      "bind": {
        "input": "search",
        "placeholder": "Country",
        "name": "Search Country"
      },
      "value": ""
    }
  ],
  "transform": [
    {"window": [{"op": "count", "as": "index"}]},
    {
      "calculate": "datum.Score",
      "as": "Happiness Score"
    },
    {
      "calculate": "datum.GDP_per_capita",
      "as": "GDP per capita"
    },
    {
      "calculate": "datum.Family",
      "as": "Family"
    },
    {
      "calculate": "datum.Life_Expentancy",
      "as": "Life Expectancy"
    },
    {
      "calculate": "datum.Freedom",
      "as": "Freedom"
    },
    {
      "calculate": "datum.Government_Corruption",
      "as": "Corruption"
    },
    {
      "calculate": "datum.Generosity",
      "as": "Generosity"
    },
    {
      "calculate": "datum.Dystopia_Residual",
      "as": "Dystopia Residual"
    },
    {"fold": ["Happiness Score", "GDP per capita", "Family", "Life Expectancy", "Freedom", "Corruption", "Generosity", "Dystopia Residual"]
    },
    {
      "calculate": "format(datum.value,'.2f')",
      "as": "rounded_value"
    },
    {
      "joinaggregate": [
        {"op": "min", "field": "rounded_value", "as": "min"},
        {"op": "max", "field": "rounded_value", "as": "max"}
      ],
      "groupby": ["key"]
    },
    {
      "calculate": "(datum.rounded_value - datum.min) / (datum.max-datum.min)",
      "as": "norm_val"
    },
    {
      "calculate": "format((toNumber(datum.min)+toNumber(datum.max)) / 2, '.2f')",
      "as": "mid"
    }
  ],
  "layer": [
    {
      "mark": {"type": "rule", "color": "#ccc"},
      "encoding": {
        "detail": {"aggregate": "count"},
        "x": {
          "field": "key",
          "axis": {
            "labelPadding": 10
          }
        }
      }
    },
    {
      "params": [
        {
          "name": "region_highlight",
          "select": {
            "type": "point",
            "fields": ["Region"]
          },
          "bind": "legend"
        }
      ],
      "mark": "line",
      "encoding": {
        "color": {
          "type": "nominal",
          "field": "Region",
          "title": "Region",
          "scale": {
            "domain": [
              "Australia and New Zealand",
              "Central and Eastern Europe",
              "Eastern Asia",
              "Latin America and Caribbean",
              "Middle East and Northern Africa",
              "North America",
              "Southeastern Asia",
              "Southern Asia",
              "Sub-Saharan Africa",
              "Western Europe"
            ],
            "range": [
              "#1f77b4",
              "#ff7f0e",
              "#2ca02c",
              "#ff5733",
              "#9467bd",
              "#8c564b",
              "#e377c2",
              "#7f7f7f",
              "#bcbd22",
              "#17becf"
            ]
          }
        },
        "detail": {"type": "nominal", "field": "index"},
        "opacity": {
          "condition": {
            "test": {
              "and": [
                {"param": "region_highlight"},
                "test(regexp(search_input, 'i'), datum.Country)"
              ]
            },
            "value": 0.3
          },
          "value": 0.05
        },
        "x": {"type": "nominal", "field": "key"},
        "y": {
          "type": "quantitative",
          "field": "norm_val",
          "axis": null
        },
        "tooltip": [
          {
            "type": "nominal",
            "field": "Country"
          },
          {
            "type": "quantitative",
            "field": "Score",
            "title": "Happiness Score",
            "format": ".2f"
          },
          {
            "type": "quantitative",
            "field": "Life Expectancy",
            "format": ".2f"
          },
          {
            "type": "quantitative",
            "field": "Freedom",
            "format": ".2f"
          },
          {
            "type": "quantitative",
            "field": "Government Corruption",
            "format": ".2f"
          }
        ]
      }
    },
    {
      "encoding": {
        "x": {"type": "nominal", "field": "key"},
        "y": {"value": 0}
      },
      "layer": [
        {
          "mark": {"type": "text", "style": "label"},
          "encoding": {
            "text": {"aggregate": "max", "field": "max"}
          }
        },
        {
          "mark": {"type": "tick", "style": "tick", "size": 8, "color": "#ccc"}
        }
      ]
    },
    {
      "encoding": {
        "x": {"type": "nominal", "field": "key"},
        "y": {"value": 150}
      },
      "layer": [
        {
          "mark": {"type": "text", "style": "label"},
          "encoding": {
            "text": {"aggregate": "min", "field": "mid"}
          }
        },
        {
          "mark": {"type": "tick", "style": "tick", "size": 8, "color": "#ccc"}
        }
      ]
    },
    {
      "encoding": {
        "x": {
          "type": "nominal",
          "field": "key"
        },
        "y": {"value": 300}
      },
      "layer": [
        {
          "mark": {"type": "text", "style": "label"},
          "encoding": {
            "text": {"aggregate": "min", "field": "min"}
          }
        },
        {
          "mark": {"type": "tick", "style": "tick", "size": 8, "color": "#ccc"}
        }
      ]
    }
  ],
  "config": {
    "axisX": {
      "domain": false,
      "labelAngle": 0,
      "tickColor": "#ccc",
      "title": null
    },
    "view": {"stroke": null},
    "style": {
      "label": {"baseline": "middle", "align": "right", "dx": -5},
      "tick": {"orient": "horizontal"}
    }
  }
}