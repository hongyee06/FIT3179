{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "World Happiness Score 2019",
    "width": 800,
    "height": 400,
    "data": {
      "url": "https://raw.githubusercontent.com/hongyee06/FIT3179/main/week9_homework/ne_110m.json",
      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    "projection": {"type": "equalEarth"},
    "layer": [
      {
        "transform": [
          {
            "calculate": "'Data is not available in ' + datum.properties.NAME",
            "as": "note"
          }
        ],
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
        "encoding": {"tooltip": {"field": "note"}}
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/hongyee06/FIT3179/main/week9_homework/oceans.topojson",
          "format": {"type": "topojson", "feature": "oceans"}
        },
        "mark": {"type": "geoshape", "fill": "skyblue"}
      },
      {
        "data": {
          "url": "https://github.com/hongyee06/FIT3179/blob/main/week9_homework/ne_110m.json",
          "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
        },
        "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
      },
      {
        "transform": [
          {
            "lookup": "properties.NAME",
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/hongyee06/FIT3179/main/week9_homework/2019.csv"
              },
              "key": "Country",
              "fields": ["Score"]
            }
          }
        ],
        "mark": {"type": "geoshape", "stroke": "white"},
        "encoding": {
          "color": {
            "field": "Score",
            "type": "quantitative",
            "scale": {
              "type": "threshold",
              "domain": [3,4,5,6,7],
              "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603","#8c2d04","#7f0000"]
            }
          },
          "tooltip": [
            {"field": "properties.NAME", "type": "nominal", "title": "Country"},
            {"field": "Score", "type": "quantitative","title":"Happiness Score"}
            
          ]
        }
      }
    ],
    "config": {}
  }